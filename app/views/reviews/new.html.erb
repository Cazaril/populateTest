<h1>Add your review</h1>

<%= form_with(model: [@product, @review]) do |r| %>
  <div>
    <%= r.label :rating %><br>
    <%= r.number_field :rating, in: 1.0..5.0, step: 1.0, :required => true %>
  </div>

  <div>
    <%= r.label :review %><br>
    <%= r.text_area :review , :required => true %>
  </div>

  <div>
    <%= r.submit "Create review" %>
  </div>
<% end %>
